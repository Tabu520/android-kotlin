<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.L4UserInteraction" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.L4UserInteraction.ActionBar" parent="Theme.MaterialComponents.DayNight.DarkActionBar" />

    <style name="Theme.L4UserInteraction.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.L4UserInteraction.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="ScoreButtons" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/button_background</item>
    </style>
    <style name="PlusButtons" parent="ScoreButtons">
        <item name="android:src">@drawable/ic_baseline_plus_40</item>
        <item name=
            "android:contentDescription">@string/plus_button_description</item>
    </style>
    <style name="MinusButtons" parent="ScoreButtons">
        <item name="android:src">@drawable/ic_baseline_minus_40</item>
        <item name=
            "android:contentDescription">@string/minus_button_description</item>
    </style>
    <style name="ScoreText">
        <item name= "android:textAppearance">@style/TextAppearance.AppCompat.Headline</item>
    </style>
    <style name="TeamText">
        <item name=
            "android:textAppearance">@style/TextAppearance.AppCompat.Display1
        </item>
    </style>
</resources>