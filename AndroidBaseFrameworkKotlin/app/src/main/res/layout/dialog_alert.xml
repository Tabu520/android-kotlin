<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_alert_dialog_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                android:src="@drawable/ic_error" />

            <TextView
                android:id="@+id/txt_alert_dialog_message"
                style="@style/BaseLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textSize="14sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_alert_dialog_positive_button"
                style="@style/CommonButtonDarkDialog"
                android:layout_gravity="center"
                android:text="@string/ok"
                />

            <Button
                android:id="@+id/btn_alert_dialog_negative_button"
                style="@style/CommonButtonDarkDialog"
                android:layout_gravity="center"
                android:text="@string/cancel"/>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>