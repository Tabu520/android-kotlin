    <style name="CommonButtonDark" parent="CommonButtonLight">
        <item name="android:background">@drawable/common_button_background_dark</item>
        <item name="android:textColor">@color/common_button_foreground_dark</item>
    </style>

    <style name="CommonButtonDarkDialog" parent="CommonButtonDark">
        <item name="android:minWidth">56dp</item>
        <item name="android:minHeight">28dp</item>
    </style>
    <style name="CommonButtonLight" parent="Widget.AppCompat.Button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minWidth">60dp</item>
        <item name="android:minHeight">30dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:singleLine">true</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:padding">5dp</item>
        <item name="android:background">@drawable/common_button_background_light</item>
        <item name="android:textColor">@color/common_button_foreground_light</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_margin">10dp</item>
    </style>

