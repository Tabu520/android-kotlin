        <item name="android:layout_height">wrap_content</item>
        <item name="android:minHeight">@dimen/control_vertical_height</item>
    </style>

    <style name="TextInputV">
        <item name="fontFamily">@font/font_open_sans</item>
        <item name="android:fontFamily">@font/font_open_sans</item>
        <item name="android:textAllCaps">false</item>
